<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employees</title>
    <%- include("bootstrap") %>
</head>

<body>
    <div class="container">
        <%- include("menu") %>
        <h4>Employees</h4>
        <p></p>
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Department Id</th>
                <th>Salary</th>
                <th></th>
            </tr>

            <% employees.forEach( e=> {%>
                <tr>
                    <td>
                        <%= e.emp_id %>
                    </td>
                    <td class="text-center">
                        <%= e.fullname %>
                    </td>
                    <td class="text-center">
                        <%= e.dept_id %>
                    </td>
                    <td class="text-end">
                        <%= e.salary %>
                    </td>
                    <td class="text-center">
                        <a href="/edit/<%=e.emp_id%>">Edit</a>
                        <a onClick="return confirm('Do you want to delete?')"
                           href="/delete/<%=e.emp_id%>">Delete</a>
                    </td>
                </tr>
                <%})%>
        </table>
    </div>
</body>

</html>